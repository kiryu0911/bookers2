<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-md-3">

      <%= render 'info', user: @user, book: @book %>

    </div>

    <div class="col-md-8 offset-md-1">

      <h2>Book detail</h2>
      <table class='table'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user) do %>
                <%= image_tag @user.get_image(80, 80) %>
                <br>
                <%= @book_info.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to @book_info.title, book_path(@book_info.id) %>
            </td>
            <td>
              <%= @book_info.body %>
            </td>
            <td>
            <% if @book_info.user == current_user %>
              <%= link_to "Edit", edit_book_path(@book_info.id), class: "btn btn-sm btn-success" %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book_info.id), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %>
            <% end %>
            </td>
          </tr>
        </tbody>
      </table>

    </div>
  </div>
</div>