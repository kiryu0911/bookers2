<p id="notice"></p>
<div class="container">
   <div class="error_explanation">
    <% if @book.errors.any? %>
      <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    </div>
  <div class="row">

    <div class="col-md-3">

      <%= render 'info', user: @user, book: @book %>

    </div>
    <div class="col-md-8 offset-md-1">

      <h2>Books</h2>
      <table class='table'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <% @books.each do |book| %>

        <tbody>
          <tr>
            <td>
              <% if book.user.profile_image.attached? %>
              <%= link_to image_tag(book.user.profile_image, :size =>"80x80"), user_path(book.user.id) %>
              <% else %>
              <%= link_to image_tag('default-image', :size =>"80x80"), user_path(book.user.id) %>
              <% end %>
            </td>
            <td>
              <%= link_to book.title, book_path(book.id) %>
            </td>
            <td>
              <%= book.body %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>

    </div>
  </div>
</div>