<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-md-3">
　　<%= render 'books/info', user: @user, book: @book %>
    </div>

     <div class="col-md-8 offset-md-1">

      <h2>Users</h2>
      <table class='table'>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @users.each do |user| %>

        <tbody>
          <tr>
            <td>
              <% if user.profile_image.attached? %>
              <%= image_tag user.profile_image, size: "80x80" %>
              <% else %>
              <%= image_tag 'default-image', :size =>"80x80" %>
              <% end %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= link_to "Show", user_path(user.id) %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
     </div>
  </div>
</div>